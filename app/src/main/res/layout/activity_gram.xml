<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5C7"
    tools:context="com.example.tsuki.germaninnutshell.GramActivity">

    <Button
        android:id="@+id/backButton"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:background="#E37654"
        android:text="Powrót"
        android:textColor="#A94353"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonGram1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="1. Czasownik haben"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/newColor"
                android:lineSpacingExtra="12sp"
                android:text="2. Odmiania czasownika przez osoby"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram3"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:text="3. Odmiania czasownika sein"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram4"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/newColor"
                android:lineSpacingExtra="12sp"
                android:text="4. Liczebniki główne"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram5"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:text="5. Liczba mnoga"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram6"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/newColor"
                android:lineSpacingExtra="12sp"
                android:text="6. Rodzajniki"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram7"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:text="7. Rodzajniki II"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram8"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/newColor"
                android:lineSpacingExtra="12sp"
                android:text="8. Zaimek dzierzawczy"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram9"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:text="9. Struktura zdania "
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram10"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/newColor"
                android:lineSpacingExtra="12sp"
                android:text="10. Struktura pytania"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram11"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:text="11. Podawanie godziny"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonGram12"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/newColor"
                android:lineSpacingExtra="12sp"
                android:text="BONUS! Zasady wymowy"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
